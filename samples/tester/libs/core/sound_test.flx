using flx.core.sound;

include namespace flx;

set_volume(1f);
println("Starting guitar");
play_sound("guitar.wav");
sleep(22000);
println("Starting music");
play_sound("sadness.wav");
sleep(30000);
println("Setting midle volume");
set_volume(0.5);
sleep(30000);
println("Setting no volume");
set_volume(0f);
sleep(5000);
println("Setting full volume");
set_volume(1f);
sleep(30000);
println("Stopping");
stop_sound();
println("Play in loop");
play_sound("water.wav");
sleep(5000);
println("Play once");
play_sound_once("water.wav");
sleep(1000);
